{
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged",
        "pre-push": "npm run test:ci"
      }
    },
    "lint-staged": {
      "*.ts": [
        "eslint --fix",
        "prettier --write"
      ],
      "*.tsx": [
        "eslint --fix",
        "prettier --write"
      ]
    }
  }